#!/usr/bin/env bash

. ~/lib/mylib.sh

# Default display
DISPLAY=:0.0

# get windowid of a window selected with mouse click.
windowid () {
    xwininfo | awk '/Window id:/ {print $4}'
}


args="--no-sound"
args+=" --on-the-fly-encoding"
args+=" --output ${PWD}/recordMyDesktop"
[ ${1} = "window" ] && args+=" --windowid $(windowid)"
#recordmydesktop
echo ${args}
