#!/usr/bin/env sh

#. ~/lib/mylib.sh

# Default display
DISPLAY=:0.0

# get windowid of a window selected with mouse click.
windowid () {
    xwininfo | awk '/Window id:/ {print $4}'
}

recordmydesktop \
    --no-sound \
    --on-the-fly-encoding \
    --output ${PWD}/recordMyDesktop
    #--windowid $(windowid)  \
