#!/bin/sh

tmux_session="void"

if tmux has-session -t ${tmux_session} 2>/dev/null; then
    info "${tmux_session} session already exists! Attaching ..."
    tmux attach-session -t ${tmux_session}
    exit
fi

if [ -n "${TMUX}" ]; then
    info "Detach from the tmux server before running this."
fi

tmux new-session -d -s ${tmux_session}
    
tmux rename-window -t ${tmux_session}:1 "Main"
tmux send-keys -t ${tmux_session}:1 'reinit-gpg-agent' C-m

tmux new-window -t ${tmux_session}:2
tmux send-keys -t ${tmux_session}:2 'htop'
tmux split-window -d

tmux attach-session -t ${tmux_session}:1
