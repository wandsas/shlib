#!/bin/sh

. ~/lib/stdout-log.sh

export GPG_TTY=$(tty)
export GPG_AGENT_INFO=${GPG_AGENT_INFO:-$XDG_RUNTIME_DIR/gnupg/S.gpg-agent}
export SSH_AUTH_SOCK=${SSH_AUTH_SOCK:-$XDG_RUNTIME_DIR}/gnupg/S.gpg-agent.ssh}

echo UPDATESTARTUPTTY | gpg-connect-agent >/dev/null 2>&1
[ $? != 0 ] && warn "Initialization of gpg-agent failed." || msg "gpg-agent initialized."

# Allow remote X11 connections for container.
xhost + >/dev/null 2>&1
msg "Allow remote X11 connections for container."
